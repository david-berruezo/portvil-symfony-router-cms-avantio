{% extends 'base_codeigniter.html.twig' %}

{% block title %}Hello GeoController!{% endblock %}

{% block body %}

    <style>
    .btn-danger {
        color: #fff;
        background-color: #1d293e;
        border-color: #1d293e;
    }

    .btn-warning {
        color: #212529;
        background-color: #ffc107;
        border-color: #ffc107;
        margin-left:5px;
    }
    </style>

    <div id="page-wrapper">

        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12"><br></div>
            </div>

            <div class="row">

                <div class="col-lg-12">

                    <div class="panel panel-default my_dashboard_review">

                        <div class="panel-heading">
                            <i class="fa fa-book fa-fw"></i> 
                        </div>  

                        <div class="panel-body">
                        
                        {{ form_start(form) }}    
                        <!-- <form id="formulario" name="formulario" method="post" action="{{ app.request.getBaseUrl() }}/pais/update/{{ data.id }}" onSubmit="return validateFields();"> -->
                            <input type="hidden" id="dynamic_geocountry_id" name="dynamic_geocountry[id]" value="{{ data.id }}">
                            <input type="hidden" id="dynamic_geocountry_language" name="dynamic_geocountry[language]" value="1">
                            <!--<input type="hidden" name="token" value="{{ csrf_token('delete-item') }}">-->
                            <input type="hidden" name="token" value="{{ csrf_token('cadena-aleatoria') }}">
                            <div class="row">
                                <div class="col-md-12">
                                    <!-- objeto -->
                                    {{ data[0].getId() }}
                                    {{dump(data[0])}}
                                    <!-- metodos reflection -->
                                    {% for method in methods %}
                                        {{ method.name }}
                                        <br>
                                    {% endfor %}

                                    <br><br>
                                   
                                    <!-- properties reflection -->
                                    {% for property in properties %}
                                        {{ property.name }}
                                        <br>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="row">
                                {# { dump(data[0]) }} #}
                                <!-- properties reflection -->
                                {% set counter_property = 0 %}
                                {% for property in properties %}
                                    <!-- text --> 
                                    {% if 'text' in property.name and 'textArea' not in property.name %}
                                        {{ property.name }}
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label for="label">Label</label>
                                                <!-- data[0].{methods[counter_property].name}() -->
                                                {% set metodo = methods[counter_property].name %}
                                                {% set vector_metodo = attribute(data[0], metodo) %}
                                                {% set nombre_propiedad = property.name %}
                                                {# vector_metodo #}
                                                <!--<input type="text" name="{{property.name}}" id="{{property.name}}" value="{{ vector_metodo }}">-->
                                                <input type="text" id="{{nombre_objeto}}_{{property.name}}" name="{{nombre_objeto}}[{{property.name}}]" value="{{ attribute(data[0], nombre_propiedad) }}">
                                                <!--
                                                <input type="text" id="dynamic_geocountry_textTitle" name="dynamic_geocountry[textTitle]" value="EspaÃ±a">
                                                <input type="text" id="dynamic_geocountry_status" name="dynamic_geocountry[status]" value="ACTIVED">
                                                <input type="text" id="dynamic_geocountry_position" name="dynamic_geocountry[position]" value="0">
                                                <div id="dynamic_geocountry_updateAt">
                                                    <select id="dynamic_geocountry_updateAt_month" name="dynamic_geocountry[updateAt][month]">
                                                        <option value=""></option><option value="1">Jan</option>
                                                        <option value="2" selected="selected">Feb</option><option value="3">Mar</option><option value="4">Apr</option><option value="5">May</option><option value="6">Jun</option><option value="7">Jul</option><option value="8">Aug</option><option value="9">Sep</option><option value="10">Oct</option><option value="11">Nov</option><option value="12">Dec</option></select><select id="dynamic_geocountry_updateAt_day" name="dynamic_geocountry[updateAt][day]"><option value=""></option><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option><option value="6">6</option><option value="7">7</option><option value="8">8</option><option value="9">9</option><option value="10">10</option><option value="11">11</option><option value="12">12</option><option value="13">13</option><option value="14">14</option><option value="15">15</option><option value="16">16</option><option value="17">17</option><option value="18">18</option><option value="19" selected="selected">19</option><option value="20">20</option><option value="21">21</option><option value="22">22</option><option value="23">23</option><option value="24">24</option><option value="25">25</option><option value="26">26</option><option value="27">27</option><option value="28">28</option><option value="29">29</option><option value="30">30</option><option value="31">31</option></select><select id="dynamic_geocountry_updateAt_year" name="dynamic_geocountry[updateAt][year]"><option value=""></option><option value="2019">2019</option><option value="2020">2020</option><option value="2021">2021</option><option value="2022">2022</option><option value="2023">2023</option><option value="2024" selected="selected">2024</option><option value="2025">2025</option><option value="2026">2026</option><option value="2027">2027</option><option value="2028">2028</option><option value="2029">2029</option></select></div>
                                                -->        
                                            </div>
                                        </div>
                                    {% endif %}
                                    {% set counter_property = counter_property + 1 %}
                                {% endfor %}    
                            </div>
                            {{ form_row(form.submit) }}
                            <!-- <input type="submit" name="submit" id="submit" value="enviar"> -->
                        <!-- </form> -->
                        {{ form_end(form, {render_rest : true}) }}
                   </div>

                </div>

            </div>

        </div>

    </div>

    <script>

        function validateFields()
        {
            // empty
        }
    </script>

{% endblock %}