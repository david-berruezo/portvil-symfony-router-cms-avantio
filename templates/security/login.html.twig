                        {% if is_granted("ROLE") %}
                            <a class="logout" href="{{ path('logout') }}">Logout</a>
                        {% endif %}
                        <!-- <a href="<?php echo base_url(); ?>/register"><?php echo lang("Text.login_registro");?></a> -->
                    </div>
                    <form method="post">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="E-mail">
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
                        <!--<input class="form-control" type="password" id ="id_password" name="password" placeholder="Contraseña" required>-->
                        <div class="form-group mostrar-password-group">
                            <input type="checkbox" class="form-control" name="mostrar_password" id="id_mostrar_password" onclick="cambiarPasswordPorText();">
                            <p class="text-mostrar-password">{{ "theme_login_register_password"|trans }}</p>
                        </div>
                        <div class="form-button">
                            <button id="submit" type="submit" class="ibtn">Login</button>
                            <a href="{{ app.request.getBaseURL() }}/forget">{{ "theme_login_register_olvidaste"|trans }}</a>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
