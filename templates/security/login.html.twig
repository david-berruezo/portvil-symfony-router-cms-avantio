</style>


<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <div class="website-logo-inside">
                        <a href="{{ app.request.basePath  }}">
                            <div class="logo">
                                <img class="logo-size" src="{{ app.request.getBaseURL() }}/assets/themes/findhouse/images/logo.png" alt="">
                            </div>
                        </a>
