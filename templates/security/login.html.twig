{% extends 'layouts/login/layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<script>
    window.onload = function(){
        const element = document.querySelector("input[name='email']");
        element.focus();
    }

    function cambiarPasswordPorText() {
        var x = document.getElementById("inputPassword");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }

</script>

<style>

    .logout{
        color:#fff;
    }

    .logout:hover{
        color:#fff;
